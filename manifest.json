{
    "manifest_version": 2,
    "name": "Firefox Bookmark Manager",
    "version": "1.0.0",
    "homepage_url": "https://esar.us",
    "description": "This extension helps you manage your bookmarks in Firefox browser",
    "author": "Radek Szumski",
    "icons": {
        "48": "icons/fav-icon-48.png",
        "96": "icons/fav-icon-96.png"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/fav-icon-16.png",
            "32": "icons/fav-icon-32.png",
            "64": "icons/fav-icon-64.png",
            "128": "icons/fav-icon-128.png"
        },
        "default_title": "Firefox Bookmark Manager"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "bookmarks"
    ],

    "options_ui": {
        "page": "./options/options.html",
        "open_in_tab": false,
        "browser_style": true
    }
}